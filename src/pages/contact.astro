<Layout title="Contact Us - Coastline Spray Foam Solutions">
  <main class="container mx-auto py-20 px-4">
    <h1 class="text-4xl font-bold text-center mb-12">Contact Us</h1>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <h2 class="text-3xl font-bold text-teal-500 mb-6">Get a Free Quote</h2>
        <form id="contact-form">
          <div class="mb-4">
            <label for="name" class="block text-gray-700 font-bold mb-2">Name</label>
            <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded" required>
          </div>
          <div class="mb-4">
            <label for="phone" class="block text-gray-700 font-bold mb-2">Phone Number</label>
            <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border rounded" required>
          </div>
          <div class="mb-4">
            <label for="email" class="block text-gray-700 font-bold mb-2">Email Address</label>
            <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded" required>
          </div>
          <div class="mb-4">
            <label for="service" class="block text-gray-700 font-bold mb-2">Service Needed</label>
            <select id="service" name="service" class="w-full px-3 py-2 border rounded">
              <option>Residential Insulation</option>
              <option>Commercial Insulation</option>
              <option>Attic Insulation & Air Sealing</option>
              <option>Crawl Space Encapsulation</option>
              <option>Comprehensive Energy Audit</option>
            </select>
          </div>
          <div class="mb-4">
            <label for="location" class="block text-gray-700 font-bold mb-2">Location</label>
            <select id="location" name="location" class="w-full px-3 py-2 border rounded">
              <option>Cocoa</option>
              <option>Melbourne</option>
              <option>Titusville</option>
              <option>Palm Bay</option>
              <option>Rockledge</option>
              <option>Merritt Island</option>
              <option>Daytona Beach</option>
            </select>
          </div>
          <div class="mb-4">
            <label for="message" class="block text-gray-700 font-bold mb-2">Brief Message (optional)</label>
            <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border rounded"></textarea>
          </div>
          <button type="submit" class="bg-amber-500 hover:bg-amber-600 text-white font-bold py-3 px-6 rounded">Submit</button>
        </form>
      </div>

      <!-- Contact Info & Map -->
      <div>
        <h2 class="text-3xl font-bold text-teal-500 mb-6">Contact Information</h2>
        <div class="mb-6">
          <p><strong>Phone:</strong> <a href="tel:123-456-7890" class="text-amber-600">123-456-7890</a></p>
          <p><strong>Email:</strong> <a href="mailto:quote@coastlinesprayfoam.com" class="text-amber-600">quote@coastlinesprayfoam.com</a></p>
          <p><strong>Business Hours:</strong> Monday - Friday, 8:00 AM - 5:00 PM</p>
          <p><strong>Service Areas:</strong> Cocoa, Melbourne, Titusville, Palm Bay, Rockledge, Merritt Island, Daytona Beach</p>
        </div>

        <!-- Google Map Placeholder -->
        <div class="bg-gray-300 rounded-lg shadow-md h-80 flex items-center justify-center">
          <p class="text-gray-500">Google Map Placeholder</p>
        </div>
      </div>
    </div>
  </main>

